<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CCEdit$PlaceholderFragment"
    android:id="@+id/ccedit_fragment"
    android:background="#ffecefff"
    android:clickable="true">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <GridLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/deal_grid"
            style="@style/AppTheme"
            android:visibility="visible"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:alignmentMode="alignBounds"
            android:columnCount="7"
            android:rowCount="2">


        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/deal_south_layout"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/table_position_bk"
            android:baselineAligned="true"
            android:gravity="center_horizontal|bottom"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:minWidth="100dp"
            android:minHeight="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_spade"
                android:id="@+id/deal_south_spade"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_heart"
                android:id="@+id/deal_south_heart"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_diamond"
                android:id="@+id/deal_south_diamond"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_club"
                android:id="@+id/deal_south_club"
                android:layout_gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/deal_north_layout"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/table_position_bk"
            android:baselineAligned="true"
            android:gravity="center_horizontal|top"
            android:clickable="true"
            android:minWidth="100dp"
            android:minHeight="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_spade"
                android:id="@+id/deal_north_spade"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_heart"
                android:id="@+id/deal_north_heart"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_diamond"
                android:id="@+id/deal_north_diamond"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_club"
                android:id="@+id/deal_north_club"
                android:layout_gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/deal_west_layout"
            android:layout_gravity="center_horizontal|left|fill_vertical"
            android:background="@color/table_position_bk"
            android:baselineAligned="false"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:gravity="left"
            android:measureWithLargestChild="false" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_spade"
                android:id="@+id/textView"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_heart"
                android:id="@+id/textView2"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_diamond"
                android:id="@+id/textView3"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_club"
                android:id="@+id/textView4"
                android:layout_gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:id="@+id/deal_east_layout"
            android:layout_gravity="center_horizontal|right|fill_vertical"
            android:background="@color/table_position_bk"
            android:baselineAligned="true"
            android:gravity="center_horizontal|top"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:minHeight="50dp"
            android:minWidth="100dp"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_spade"
                android:id="@+id/textView5"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_heart"
                android:id="@+id/textView6"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_diamond"
                android:id="@+id/textView7"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_club"
                android:id="@+id/textView8"
                android:layout_gravity="left" />
        </LinearLayout>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/suit_spinner"
            android:spinnerMode="dropdown"
            android:focusable="false"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="left|top" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deal_northeast_layout"
            android:layout_gravity="right|top"
            android:layout_column="2"
            android:layout_row="0" >

        </LinearLayout>



    </GridLayout>

</RelativeLayout>
